<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.AppEvent;
			import app.model.vo.AttachImageVO;
			
			import mx.events.FlexEvent;
			
			import spark.components.DataGroup;
			
			[Bindable]
			[Embed(source="assets/image/picture_up.png")]
			public var nullImage:Class;
			
			override public function set data(item:Object):void
			{
				super.data = item;
				
				var attachImage:AttachImageVO = item as AttachImageVO;
				
				if(attachImage == null)
				{					
					image.source = nullImage;
					
					closeImage.visible = false;
				}
				else
				{					
					image.source = attachImage.facBitmapData;
					
					closeImage.visible = true;
				}				
			}		
			
			protected function closeImage_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new AppEvent(AppEvent.DELETEATTACH,data,true));
			}
			
			protected function image_clickHandler(event:MouseEvent):void
			{				
				var attachImage:AttachImageVO = data as AttachImageVO;
				
				if(attachImage == null)
				{
					dispatchEvent(new AppEvent(AppEvent.UPLOADATTACH,data,true));
				}
				else
				{
					var dataGroup:DataGroup = this.parent as DataGroup;
					dispatchEvent(new AppEvent(AppEvent.NAVIATTACH,this.itemIndex,true));						
				}
			}
			
		]]>
	</fx:Script>
	
	<s:Image id="image" width="100" height="100" click="image_clickHandler(event)"/>
	<s:Image id="closeImage" source="@Embed('assets/image/w_close.png')" right="2" top="2" buttonMode="true"
			 click="closeImage_clickHandler(event)" toolTip="点击删除照片"/>
</s:ItemRenderer>

<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="30" height="50" verticalScrollPolicy="off" horizontalScrollPolicy="off"
		 creationComplete="init()">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<mx:Move id="move_up" target="{img}" />
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			
			[Embed(source="img/num.png")]private var NumSkin:Class;
			
			private function init():void
			{
				img.source = NumSkin;
			}
			public function setnum(num1:Number):void{
				var num:int = int(num1);
				move_up.yFrom = 0;
				move_up.yTo = -(num*50);
				move_up.repeatCount = 1;
				move_up.repeatDelay = 0;
				move_up.duration = 2000;
				move_up.play();
			}
			
		]]>
	</fx:Script>
	<s:Image id="img" x="0" y="0"/>
</mx:Canvas>

<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[			
			public static const CHECK:String = "Check";
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout gap="5" horizontalAlign="center"/>
	</s:layout>
	
	<s:Image id="img" width="80" height="80" source="{data.barImgSource}"/>
	<s:Label fontSize="13" width="80" textAlign="center" 
			 text="{data.barName}" maxDisplayedLines="1" showTruncationTip="true"/>
	<s:CheckBox id="cb" change="dispatchEvent(new Event(CHECK));"/>
</s:ItemRenderer>

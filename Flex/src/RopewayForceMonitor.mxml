<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   creationComplete="facade.startup(this)" 
			   preloader="custom.components.AppDownloadProgressBar"
			   xmlns:components="app.view.components.*" 
			   skinClass="custom.skin.SkinApplication"
			   width="100%" height="100%" fontSize="14">
		
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:Fade id="fade" alphaFrom="0.2" alphaTo="1" duration="500" repeatCount="20" target="{elli}" repeatBehavior="reverse"/>
	</fx:Declarations>
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		s|Label{
			font-family: '微软雅黑';
		}
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import app.ApplicationFacade;
			
			import mx.events.FlexEvent;
			
			[Embed(source="assets/image/title_back.png", scaleGridTop="0", scaleGridBottom="94", scaleGridLeft="0", scaleGridRight="120")]
			[Bindable]public var titleBack:Class;
			
			private var facade:ApplicationFacade = ApplicationFacade.getInstance();
						
			protected function title_doubleClickHandler(event:MouseEvent):void
			{				
				stage.displayState = (stage.displayState == StageDisplayState.NORMAL)?StageDisplayState.FULL_SCREEN:StageDisplayState.NORMAL;   
			}			
			
			protected function button1_buttonDownHandler(event:FlexEvent):void
			{
				fade.play();
			}
			
		]]>
	</fx:Script>
	
	<s:Image height="75" doubleClick="title_doubleClickHandler(event)" doubleClickEnabled="true"
			 horizontalAlign="left" source="assets/image/title.png"/>
	<s:Image left="490" right="0" height="75" 
			 doubleClick="title_doubleClickHandler(event)"
			 doubleClickEnabled="true"  
			 scaleMode="stretch"
			 source="{titleBack}"/>
	
	<s:Group width="75" height="100">
		<s:Image id="imgAlarm" width="75" height="100" source="assets/image/panel_alarm.png"/>
		<s:Ellipse left="-20" right="-20" top="-20" bottom="10" id="elli">
			<s:fill>
				<s:RadialGradient>
					<s:entries>
						<s:GradientEntry color="0xC5C551" ratio="0.00" alpha="1.0"/> 
						<s:GradientEntry color="0xFEFE24" ratio="0.50" alpha="0.5"/>
						<s:GradientEntry color="0xECEC21" ratio="1.00" alpha="0"/>
					</s:entries>
				</s:RadialGradient>
			</s:fill>
		</s:Ellipse>
	</s:Group>
	
	<s:Button label="Test" x="200" buttonDown="button1_buttonDownHandler(event)"/>
	
	<components:MainMenu id="mainMenu" top="75" bottom="0" width="130"/>
	
	<s:VGroup left="130" right="0" top="75" bottom="0" 
			  paddingTop="10" paddingBottom="10" paddingLeft="5" paddingRight="10" gap="0">
		<components:MainStation id="mainStation" height="31" width="100%"/>		
		<s:SkinnableContainer id="mainContent" width="100%" height="100%" skinClass="custom.skin.SkinMainContent"/>
	</s:VGroup>
	
	<components:LoadingBar id="mainLoading" top="0" bottom="0" left="0" right="0"/>
</s:Application>

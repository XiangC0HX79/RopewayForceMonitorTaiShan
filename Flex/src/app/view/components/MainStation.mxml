<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:RadioButtonGroup id="rbGroup" change="rbGroup_changeHandler(event)"/>		
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import custom.itemRenderer.ItemRendererMainStation;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.RendererExistenceEvent;
						
			[Bindable]public var dpStations:ArrayCollection;
						
			protected function datagroup_rendererAddHandler(event:RendererExistenceEvent):void
			{
				var render:ItemRendererMainStation = event.renderer as ItemRendererMainStation;
				render.rb.group = rbGroup;
				if(event.index == 0)
					render.rb.selected = true;
			}
			
			protected function rbGroup_changeHandler(event:Event):void
			{				
				dispatchEvent(new Event(Event.CHANGE));
			}
			
		]]>
	</fx:Script>
	
	<s:Rect left="0" right="0" bottom="0" top="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x027EC4" ratio="0.00" alpha="1"/>
				<s:GradientEntry color="0x047AC0" ratio="0.49" alpha="1"/>
				<s:GradientEntry color="0x0058A1" ratio="0.49" alpha="1"/>
				<s:GradientEntry color="0x256AAD" ratio="1.00" alpha="1"/>				
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:DataGroup dataProvider="{dpStations}" color="0xFFFFFF" height="100%"
				 rendererAdd="datagroup_rendererAddHandler(event)"
				 itemRenderer="custom.itemRenderer.ItemRendererMainStation">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" paddingLeft="20" gap="60"/>
		</s:layout>
	</s:DataGroup>
</s:Group>

<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 implements="mx.core.IDataRenderer" 
		 maxWidth="200" maxHeight="70">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:DateTimeFormatter id="df" dateTimePattern="HH:mm:ss"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.model.vo.EngineTempVO;
			[Bindable]private var _data:Object;	
			
			[Bindable]private var _ropewayTime:String;	
			
			[Bindable]private var _ropewayForce:String;	
			
			public function get data():Object
			{
				return _data;
			}
			
			public function set data(value:Object):void
			{
				if (_data == value)
					return;
				
				_data = value;
					
				if(_data is EngineTempVO)
				{
					var et:EngineTempVO = _data as EngineTempVO;
				}
				else if(_data.item is EngineTempVO)
				{
					et = _data.item as EngineTempVO;
				}
				
				if(et)
				{
					_ropewayTime = df.format(et.date);
					
					_ropewayForce = et.temp + "℃";
				}
			}
		]]>
	</fx:Script>	
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="alarm"/>
	</s:states>
	
	<s:Rect radiusX="5" radiusY="5" left="2" right="2" top="2" bottom="2">
		<s:fill>
			<s:SolidColor color="white"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect radiusX="5" radiusY="5" left="2" right="2" top="2" bottom="2">
		<s:stroke>
			<s:SolidColorStroke color="gray" weight="2"/>
		</s:stroke>
	</s:Rect>
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10">		
		<s:HGroup>
			<s:Label text="时　间："/>
			<s:Label text="{_ropewayTime}"/>
		</s:HGroup>
		<s:HGroup>
			<s:Label text="温　度："/>
			<s:Label text="{_ropewayForce}"/>
		</s:HGroup>
	</s:VGroup>
</s:Group>

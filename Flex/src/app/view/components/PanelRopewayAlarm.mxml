<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 skinClass="custom.skin.SkinPanelRealtimeDetection"
		 width="100%" minWidth="250" height="170">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]public var dataPro:ArrayCollection = new ArrayCollection;
		]]>
	</fx:Script>
	
	<s:SkinnableContainer skinClass="custom.skin.SkinPanelTitleRealtimeDetection" width="100%" height="33">	
		<s:Image x="15" source="assets/image/panel_title_icon.png" verticalCenter="-2"/>
		<s:Label x="30" text="报警情况" fontWeight="bold" verticalCenter="0"/>
	</s:SkinnableContainer>
	
	<s:Scroller left="20" right="20" top="50" bottom="10">
		<s:DataGroup width="100%" dataProvider="{dataPro}" color="red">
			<s:layout>
				<s:VerticalLayout/>
			</s:layout>	
			<s:itemRenderer>
				<fx:Component>
					<s:ItemRenderer>
						<s:Label text="{data}"/>						
					</s:ItemRenderer>
				</fx:Component>
			</s:itemRenderer>
		</s:DataGroup>
	</s:Scroller>
</s:SkinnableContainer>

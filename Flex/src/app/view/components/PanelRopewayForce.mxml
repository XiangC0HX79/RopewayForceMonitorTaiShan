<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 skinClass="custom.skin.SkinPanelRealtimeDetection"
		 width="340" height="170">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:DateTimeFormatter id="df" dateTimePattern="HH:mm:ss"/>
		
		<s:Parallel id="parallel">
			<s:Move id="moveContent" target="{content}"/>				
			<s:Move id="moveImage" target="{imageAnimate}"/>
			<s:effectEnd>
				<![CDATA[				
				imageAnimate.visible = false;
				imageAnimate.includeInLayout = false;
				]]>
			</s:effectEnd>
		</s:Parallel>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.model.vo.ConfigVO;
			import app.model.vo.RopewayVO;
			
			import mx.binding.utils.BindingUtils;
			import mx.graphics.ImageSnapshot;
			
			[Bindable]private var _color:int;
			
			[Bindable]private var _ropeway:RopewayVO;
			public function get ropeway():RopewayVO
			{
				return _ropeway;
			}
			public function set ropeway(rw:RopewayVO):void
			{			
				_ropeway = rw;
				
				if(rw && (rw.ropewayOpenCount > 0))
				{
					_color = (rw.lastRopewayForce.alarm > 0)?0xFF0000:0x02C462;
					
					lbOpenCount.text = rw.ropewayOpenCount.toString() + "/2002";
					
					lbForce.text = rw.lastRopewayForce.ropewayForce.toString();
					
					lbUnit.text = rw.lastRopewayForce.ropewayUnit;
					
					lbTime.text = df.format(rw.lastRopewayForce.ropewayTime);
									
					imageAnimate.source = new Bitmap(ImageSnapshot.captureBitmapData(content));
					imageAnimate.visible = true;
					imageAnimate.includeInLayout = true;
					
					moveContent.xFrom = -content.width;
					moveContent.xTo = 0;
					
					moveImage.xFrom = 0;
					moveImage.xTo = content.width;
					
					parallel.play();
				}
				else
				{					
					lbOpenCount.text = "";
					
					lbForce.text = "";
					
					lbUnit.text = "";
					
					lbTime.text = "";
				}
			}
			
			[Bindable]public var config:ConfigVO;
		]]>
	</fx:Script>
	
	<fx:Binding source="config.pin" destination="btnPin.selected" twoWay="true"/>
	
	<s:SkinnableContainer skinClass="custom.skin.SkinPanelTitleRealtimeDetection" width="100%" height="33">	
		<s:Image x="15" source="assets/image/panel_title_icon.png" verticalCenter="-2"/>
		<s:Label x="30" text="吊箱信息（{_ropeway.ropewayId}）" fontWeight="bold" verticalCenter="0"/>
		<s:ToggleButton id="btnPin" right="20" width="20" height="20" buttonMode="true"
						skinClass="custom.skin.SkinToggleButtonPin" verticalCenter="0"/>
	</s:SkinnableContainer>
	
	
	<s:Group left="20" right="20" top="50" bottom="10" clipAndEnableScrolling="true" color="{_color}">	
		
		<s:Group id="content" width="100%" height="100%">
			
			<s:Image source="assets/image/panel_car.png"/>	
			
			<s:Label id="lbOpenCount" fontSize="20" fontWeight="bold" top="0" right="0"/>
			
			<s:HGroup x="100" fontSize="34" fontWeight="bold" verticalCenter="0">
				<s:Label text="02"/>
				<s:Spacer width="20"/>
				<s:Label id="lbForce"/>
				<s:Label id="lbUnit"/>
			</s:HGroup>
			
			<s:Image source="assets/image/panel_title_icon.png" bottom="0" left="0"/>
			
			<s:Label id="lbTime" fontSize="20" fontWeight="bold" bottom="0" right="0"/>	
		</s:Group>
		
		<s:Image id="imageAnimate" width="100%" height="100%" visible="false" includeInLayout="false"/>
	</s:Group>
</s:SkinnableContainer>

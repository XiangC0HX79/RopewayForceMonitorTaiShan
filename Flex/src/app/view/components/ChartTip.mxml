<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 implements="mx.core.IDataRenderer" 
		 width="123" height="52">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:DateTimeFormatter id="df" dateTimePattern="HH:mm:ss"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.model.vo.RopewayForceVO;
			
			[Bindable]private var _ropewayForce:RopewayForceVO;	
			
			[Bindable]private var _data:Object;	
			
			[Bindable]private var _alarmType:String;	
			
			public function get data():Object
			{
				return _data;
			}
			
			public function set data(value:Object):void
			{
				if (_data == value)
					return;
				
				_data = value;
					
				if(_data is RopewayForceVO)
					_ropewayForce = _data as RopewayForceVO;
				else if(_data.item is RopewayForceVO)
					_ropewayForce = _data.item as RopewayForceVO;
				
				this.currentState = (_ropewayForce.alarm > 0)?"alarm":"normal";
				
				if(_ropewayForce.alarm == 1)
					_alarmType = "平均值";
				else if(_ropewayForce.alarm == 2)
					_alarmType = "前次值";
				else if(_ropewayForce.alarm == 3)
					_alarmType = "平均值/前次值";
				else
					_alarmType = "未知报警";
			}
		]]>
	</fx:Script>	
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="alarm"/>
	</s:states>
	
	<s:Rect radiusX="5" radiusY="5" left="2" right="2" top="2" bottom="2">
		<s:fill>
			<s:SolidColor color="white"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect radiusX="5" radiusY="5" left="2" right="2" top="2" bottom="2">
		<s:stroke>
			<s:SolidColorStroke color="gray" weight="2"/>
		</s:stroke>
	</s:Rect>
	
	<s:VGroup paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10">		
		<s:HGroup>
			<s:Label text="时　间："/>
			<s:Label text="{df.format(_ropewayForce.ropewayTime)}"/>
		</s:HGroup>
		<s:HGroup>
			<s:Label text="抱索力："/>
			<s:Label text="{_ropewayForce.ropewayForce} {_ropewayForce.ropewayUnit}"/>
		</s:HGroup>
		<s:HGroup includeIn="alarm">
			<s:Label text="报　警："/>
			<s:Label text="{_alarmType}"/>
		</s:HGroup>
	</s:VGroup>
</s:Group>

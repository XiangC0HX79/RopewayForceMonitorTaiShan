<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="200" height="100">
	<fx:Script>
		<![CDATA[
			import app.model.vo.VideoVO;
			
			public static const SAVE:String = "save";
			
			[Bindable]public var video:VideoVO;			
		]]>
	</fx:Script>
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="5" radiusY="5">
		<s:stroke>
			<s:SolidColorStroke color="0x888888" weight="2"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="0xFFFFFF"/>
		</s:fill>
	</s:Rect>
	<s:VGroup left="10" right="10" top="10" bottom="10" horizontalAlign="justify">
		<s:HGroup verticalAlign="middle">
			<s:Label text="名称："/>
			<s:TextInput id="txtTitle" width="100%" text="{video.title}"/>
		</s:HGroup>
		<s:HGroup verticalAlign="middle">
			<s:Label text="说明："/>
			<s:TextInput id="txtInfo" width="100%" text="{video.info}"/>
		</s:HGroup>
		<s:HGroup verticalAlign="middle" horizontalAlign="center">
			<s:Button label="保存" buttonDown="dispatchEvent(new Event(SAVE))"/>
			<s:Button label="取消" buttonDown="{this.visible = false}"/>
		</s:HGroup>
	</s:VGroup>
</s:Group>

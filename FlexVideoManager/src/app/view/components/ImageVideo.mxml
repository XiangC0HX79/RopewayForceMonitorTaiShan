<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 horizontalAlign="center" gap="0"
		 x="{v.X - this.width / 2}" y="{v.Y - this.height / 2}">
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import app.model.vo.VideoVO;
			
			[Bindable]public var v:VideoVO;			
		]]>
	</fx:Script>
	<s:Label text="{v.title}" backgroundColor="0xFFFFFF" fontWeight="bold"/>
	<s:Image id="img" width="32" height="32"
		source="@Embed('assets/image/cam.png')" buttonMode="true"/>
</s:VGroup>

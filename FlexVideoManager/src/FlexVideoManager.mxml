<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   creationComplete="facade.startup(this)" width="100%" height="100%"
			   xmlns:components="app.view.components.*">
	<fx:Script>
		<![CDATA[
			import app.ApplicationFacade;
			
			private var facade:ApplicationFacade = ApplicationFacade.getInstance();
		]]>
	</fx:Script>
	
	<s:Group id="content" left="0" right="0" top="40" bottom="0" clipAndEnableScrolling="true">
		<components:ImageGroup id="imageGroup"/>
		<components:ToolGroup id="toolGroup" x="10" y="10"/>		
		<components:TipGroup id="tipGroup" visible="false"/>
	</s:Group>
	<components:MenuGroup id="menuGroup" horizontalCenter="0" y="10"/>
	<components:LoadingBar id="loadingBar" top="0" bottom="0" left="0" right="0"/>
</s:Application>
